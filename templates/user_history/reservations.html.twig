{% extends 'base.html.twig' %}

{% block title %}{% trans %} All user bookings{% endtrans %}{% endblock %}

{% block body %}
    <h1 class="d-flex align-items-center justify-content-center my-5">{% trans %} All user bookings{% endtrans %}</h1>

    <table class="table-dark table mx-auto" style="width:90vw">
        <thead>
            <tr class="table-light">
                <th>{% trans %}Customer{% endtrans %}</th>
                <th>{% trans %}Title{% endtrans %}</th>
                <th>{% trans %}Start{% endtrans %}</th>
                <th>{% trans %}End{% endtrans %}</th>
                <th>{% trans %}Description{% endtrans %}</th>
                <th>{% trans %}Room{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
            {% for reservation in reservations %}
                <tr>
                    <td>{{ reservation.user.firstname }} {{ reservation.user.lastname }}</td>
                    <td>{{ reservation.title }}</td>
                    <td>{{ reservation.start|date('Y-m-d H:i') }}</td>
                    <td>{{ reservation.end|date('Y-m-d H:i') }}</td>
                    <td>{{ reservation.description }}</td>
                    <td>{{ reservation.salle.nom }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}