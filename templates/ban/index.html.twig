{% extends 'base.html.twig' %}

{% block title %}Liste des bannis
{% endblock %}

{% block body %}

	<h1 class='text-center'>Utilisateurs bannis</h1>
	<table class="table table-dark">
		<thead>
			<tr>
				<th scope="col">Id</th>
				<th scope="col">{% trans %}First name  {% endtrans %}</th>
				<th scope="col">{% trans %}Last name {% endtrans %}</th>
				<th scope="col">{% trans %}Email {% endtrans %}</th>
				<th scope="col">{% trans %}Actions {% endtrans %}</th>
			</tr>
		</thead>
		<tbody>
			{% for user in bannedUsers %}
				<tr>
					<td>{{ user.id }}</td>
					<td>{{ user.firstname }}</td>
					<td>{{ user.lastname }}</td>
					<td>{{ user.email }}</td>
					<td>
						<a href="{{ path('app_user_show', {'id': user.id}) }}" class='btn btn-primary'>{% trans %}See {% endtrans %}</a>
						<a href="{{ path('app_unban', {'id': user.id}) }}" class="btn btn-success" onclick="return confirm('Ãªtes vous sur de vouloir debannir cet utilisateur?');">{% trans %}Unban {% endtrans %}</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>


{% endblock %}
